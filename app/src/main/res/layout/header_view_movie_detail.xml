<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:background="@color/common_bg"
    android:orientation="vertical"
    android:padding="15dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <com.share.open_source.widget.banner.WrapBannerView
            android:id="@+id/wrap_banner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <com.crazysunj.cardslideview.CardViewPager
                android:id="@+id/home_vp"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:fitsSystemWindows="true"
                app:card_loop="true"
                app:layout_collapseMode="parallax" />
        </com.share.open_source.widget.banner.WrapBannerView>





        <LinearLayout
            android:id="@+id/ll_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/wrap_banner"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_movie_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:layout_marginTop="4dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:text=""
                android:textColor="@color/common_h1"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_translate_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:layout_marginTop="4dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="xxxxxxxxxxxxxxxx"
                android:textColor="@color/common_h1"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_director"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:layout_marginTop="4dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="xxxxxxxxxxxxxxxx"
                android:textColor="@color/common_h1"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_performer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="xxxxxxxxxxxxxxxx"
                android:textColor="@color/common_h1"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_length"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="xxxxxxxxxxxxxxxx"
                android:textColor="@color/common_h1"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_date_area"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="xxxxxxxxxxxxxxxx"
                android:textColor="@color/common_h1"
                android:textSize="16sp" />


        </LinearLayout>

        <RelativeLayout
            android:id="@+id/rl_card_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll_desc"
            android:layout_margin="6dp"
            android:background="@drawable/bg_color_block_f9f9fa"
            android:padding="6dp">

            <ImageView
                android:id="@+id/up_quot"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:layout_alignParentLeft="true"
                android:scaleType="centerCrop"
                android:src="@drawable/up_quot" />

            <TextView
                android:id="@+id/tv_intro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:layout_toLeftOf="@+id/down_quot"
                android:layout_toRightOf="@id/up_quot"
                android:ellipsize="end"
                android:lineSpacingMultiplier="1.5"
                android:paddingBottom="12dp"
                android:paddingTop="12dp"
                android:text="xxxxxxxxxxxxxxxx"
                android:textColor="@color/common_h2"
                android:textSize="@dimen/text_size_14" />

            <ImageView
                android:id="@+id/down_quot"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:scaleType="centerCrop"
                android:src="@drawable/down_quot" />
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>