<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_layout_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:stateListAnimator="@drawable/lift_on_touch"
    app:cardBackgroundColor="@android:color/white"
    app:cardCornerRadius="5dp"
    app:cardElevation="5dp"
    android:orientation="vertical"
    app:contentPadding="2dip">
    <!--450dp-->
    <RelativeLayout
        android:id="@+id/rel_ads"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="20dp">

            <ImageView
                android:id="@+id/iv_ads"
                android:layout_width="298dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:adjustViewBounds="true" />

            <LinearLayout
                android:id="@+id/ll_ads"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="0dp" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_ads_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:gravity="center"
                android:singleLine="true"
                android:text="这是广告"
                android:textColor="#000000"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/tv_ad_ren"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                android:drawablePadding="8dp"
                android:gravity="center"
                android:maxLines="2"
                android:text="2839187人 在玩"
                android:textColor="@color/app_theme_color"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_ad_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_ad_ren"
                android:layout_marginTop="15dp"
                android:ellipsize="end"
                android:lineSpacingMultiplier="1.5"
                android:maxLines="3"
                android:text="看书看累了，就歇息一会儿，换种方式，看看都有哪些大神在。"
                android:textColor="#000000"
                android:textSize="@dimen/sp_14" />
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rel_normal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <FrameLayout
            android:id="@+id/img_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true">

            <ImageView
                android:id="@+id/iv_book_cover"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"/>
            <!--com.shizhefei.view.largeimage.LargeImageView-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="bottom"
                >
                <TextView
                    android:id="@+id/tv_name_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="6dp"
                    android:layout_marginLeft="6dp"
                    android:drawableLeft="@drawable/ic_view"
                    android:drawablePadding="6dp"
                    android:gravity="center_vertical"
                    android:text="0"
                    android:textColor="@color/white"
                    android:textSize="10sp" />
                <TextView
                    android:id="@+id/tv_follower_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="6dp"
                    android:layout_marginLeft="6dp"
                    android:drawableLeft="@drawable/fav"
                    android:drawablePadding="6dp"
                    android:gravity="center_vertical"
                    android:text="0"
                    android:textColor="@color/white"
                    android:textSize="10sp" />
            </LinearLayout>

        </FrameLayout>
        <!--android:adjustViewBounds="true"-->
        <!--android:lineSpacingMultiplier="1.5"-->
        <!--android:ellipsize="end"-->
        <!--android:drawableLeft="@drawable/ic_header_13b9c7"   2018-6-29 20:04:40   -->

        <TextView
            android:id="@+id/tv_summary"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/img_container"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:padding="6dp"
            android:text="2018年俄罗斯世界杯是第21届世界杯足球赛,2018年俄罗斯世界杯是第21届世界杯足球赛,比赛于2018年6月14日至7月15日在俄罗斯境内11座城市中的12座球比赛于2018年6月14日至7月15日在俄罗斯境内11座城市中的12座球"
            android:textColor="#000000"
            android:lineSpacingMultiplier="1.5"
            android:textSize="@dimen/sp_14" />


    </RelativeLayout>


</LinearLayout>


    <!--android.support.v7.widget.CardView-->